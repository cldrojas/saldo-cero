---
import TabsMenu from '@components/TabsMenu.astro'
import TitleBar from '@components/TitleBar.astro'
import FloatingActionButton from '@components/FloatingActionButton.astro'
import { ClientRouter } from 'astro:transitions'
import MovementsModal from '@components/MovementsModal.astro'
import DebugPanel from '@components/DebugPanel.astro'
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/favicon.svg"
    />
    <meta
      name="generator"
      content={Astro.generator}
    />
    <title>Saldo Cero</title>

    <link
      rel="stylesheet"
      href="/src/styles/global.css"
    />
    <ClientRouter />
  </head>
  <!-- TODO: add theme selector -->
  <body class="bg-gray-900 text-gray-200 flex relative justify-center h-dvh">
    <main
      class="border border-gray-700 rounded-lg min-h-svh w-full px-4 py-4 flex flex-col justify-between max-w-3xl"
    >
      <TitleBar />
      <div class="flex flex-col h-full content-start relative">
        <slot />
        <FloatingActionButton server:defer />
        <TabsMenu />
        <MovementsModal server:defer />
      </div>
    </main>
  </body>
</html>
