---
import Layout from '@layouts/Layout.astro'
import MovementsList from '@components/MovementsList.astro'
import FiltersButton from '@components/FiltersButton.astro'
---

<Layout>
  <main class="pt-2">
    <header class="flex gap-2 items-center justify-between mb-2">
      <input
        type="search"
        name="search"
        id="search"
        class="w-full px-4 py-2 bg-gray-800 rounded-lg border border-gray-700 text-gray-200 focus:outline-none focus:ring-2 focus:ring-sky-600"
        placeholder="Search movements..."
      />
      <FiltersButton server:defer />
    </header>
    <MovementsList />
  </main>
</Layout>
