---
const store = global.localStorage?.getItem('saldocero.movements') || '{}'
const movements = store ? JSON.parse(store) : []
---

<div class="border">
  <div class="flex flex-col gap-2 p-4 bg-gray-800 rounded-lg">
    <h2 class="text-xl font-bold text-gray-200">Debug Panel</h2>
    <pre
      class="bg-gray-700 p-4 rounded text-sm text-gray-300">
      {JSON.stringify(movements, null, 2)}
    </pre>
  </div>
</div>
